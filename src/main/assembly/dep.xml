<assembly>
  <baseDirectory>dvp-${project.version}</baseDirectory>
  <formats>
    <format>tar.gz</format>
    <format>zip</format>
  </formats>
    <files>
      <file>
        <source>target/${project.artifactId}-${project.version}.war</source>
        <outputDirectory>webapps</outputDirectory>
	<destName>dvp.war</destName>
      </file>
    </files>    
  <fileSets>
    <fileSet>
      <includes>
        <include>README*</include>
        <include>LICENSE*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>hsqldb</directory>
      <outputDirectory>hsqldb</outputDirectory>
      <includes>
        <include>lib/**</include>
        <include>run.*</include>
        <include>server.properties</include>
        <include>vprovider.properties</include>
       <include>vprovider.script</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>variableProviders</directory>
      <outputDirectory>variableProviders</outputDirectory>
      <includes>
        <include>*.xml</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>target</directory>
      <outputDirectory>variableProviders</outputDirectory>
      <includes>
        <include>dynamic_variable_provider.jar</include>
      </includes>
    </fileSet>           
  </fileSets>  
  <dependencySets>
    <dependencySet>
      <outputDirectory>hsqldb/lib</outputDirectory>
      <includes>
        <include>hsqldb:hsqldb</include>
      </includes>
    </dependencySet>
   </dependencySets>
</assembly>
